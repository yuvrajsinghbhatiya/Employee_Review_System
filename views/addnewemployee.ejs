
<link rel="stylesheet" href="/css/register.css">


<br><br>
<div class="container">

    <div class="row mt-3">
        <div class="col-md-6 m-auto">
            <div class="card card-body shadow-lg border border-dark rounded-4">
                <h1 class="text-center">Add New Employee</h1>
                <hr><br>

                <form action="/users/create-user" method="post">

                    <div class="form-group mt-2">
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name"/>
                    </div>

                    <div class="form-group mt-2">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"/>
                    </div>
    
                    <div class="form-group mt-2">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password"/>
                    </div>

                    <div class="form-group mt-2">
                        <label for="pass">Confirm Password</label>
                        <input type="password" id="pass" name="password2" class="form-control" placeholder="Confirm Password"/>
                    </div>
    
                    <div class="d-grid gap-2 col-12 mx-auto mt-3">
                        <button class="btn btn-dark color" type="submit">Add</button>
                    </div>

                </form>

            </div>
        </div>
    </div>

</div>