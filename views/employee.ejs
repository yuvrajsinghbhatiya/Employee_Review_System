
<br><br>
<h3 class="text-center mt-3" >EMPLOYEES LIST</h3>

<hr>
<br>

<div class="container mt-4 empcont shadow-lg border border-dark rounded-4" style="font-family: monospace;">

    <table class="table table-light table-hover  ">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Password</th>
                <th scope="col">Admin</th>
                <th scope="col"></th>
            </tr>
        </thead>

        <tbody>
            <% for(let i=0;i < employees.length;i++){ %>
                <tr>
                <td><%=employees[i].name %></td>
                <td><%=employees[i].email %></td>
                <td><%=employees[i].password %></td>
                <td><%=employees[i].isAdmin %></td>
                <td>
                    <a href="/admin/delete-employee/<%=employees[i]._id%>" class="btn btn-dark">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
                </tr>
            <% } %>
        </tbody>
    </table>


</div>