

<br>
<div class="container-fluid mt-4">
    <h2 class="text-center" >ASSIGN RECIPIENT AND RECIEVER</h2>
<hr>
<br>
<br>
    <div class="container d-flex justify-content-between mt-4" style="font-family: monospace;">
        <div class="row col-md-6 card shadow-lg border border-dark rounded-4">
            <br>
            <h3 class="text-center"><b>Assign Interview</b></h3>

            <hr>

            <form method="POST" action="/admin/set-Reviewers" class="mt-2 card-body">
                <div>

                    <div>
                        <h5><b>Reviewer</b></h5>
                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"
                            name="Reviewer">
    
                            <option selected disabled>Select Reviewer</option>
      
                            <% for(let i = 0; i < employeeList.length; i++){ %>
                                <option value="<%= employeeList[i].id %>">
                                    <%= employeeList[i].name %>
                                </option>
                            <% } %>
                        </select>
                    </div>
                    
                    <h5><b>Recipient</b></h5>
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"
                        name="Recipient">
                
                        <option selected disabled>Select Recipient</option>

                        <% for(let i=0; i < employeeList.length; i++){ %>

                            <option value="<%= employeeList[i].id  %>">
                                <%= employeeList[i].name %>
                            </option>

                        <% } %>
                    </select>
                </div>

                

                <div class="d-grid gap-2 col-6 mx-auto form_button">
                    <input class="btn btn-dark" type="submit" value="Submit">
                </div>

            </form>
        </div>

        <div class="row col-md-6 card shadow-lg border border-dark rounded-4">
            <br>
            <h3 class="text-center"><b>New Admin</b></h3>
            <hr>
            <br><br>
            <h5><b>Admin</b></h5>

            <form method="POST" action="/admin/newAdmin" class="mt-3">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"
                    name="newAdmin">

                    <option selected disabled>Select Admin</option>
                    <% for(let i=0; i < employeeList.length; i++){ %>
                        <option value="<%= employeeList[i].id %>">
                            <%= employeeList[i].name %>
                        </option>
                    <%}%>
                </select>

                <div class="d-grid gap-2 col-6 mx-auto form_button">
                  <input class="btn btn-dark" type="submit" value="Submit" />
                </div>

            </form>
        </div>

    </div>
</div>